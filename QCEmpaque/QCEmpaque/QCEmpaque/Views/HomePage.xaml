<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QCEmpaque.Views.HomePage"
             Title="Inicio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienvenido a QC App"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   FontAttributes="Bold"
                   TextColor="#FF5313"
                   FontSize="Large"
                   FontFamily="Arial Black"/>
            <Image HorizontalOptions="CenterAndExpand"
                   Source="LogoCalidadADN">
            </Image>
            <Label Text="Todos Somos Calidad !!"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand"
                   FontAttributes="Bold"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>